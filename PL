SELECT
  T0.CARDCODE,
  T2.CARDNAME,
  T0.ITEMCODE AS 'SAPITEMCODE',
  T0.SUBSTITUTE AS'BPITEMCODE',
  T1.ITEMNAME AS 'ITEM DESCRIPTION',
  T0.U_PRESS AS 'PRESS',
  T0.U_AROUND AS 'AROUND',
  T0.U_ACROSS AS 'ACROSS',
  T0.U_BAR1 AS 'BAR 1',
  T0.U_BAR2 AS 'BAR 2',
  T0.U_SPEC1 AS 'SPEC 1',
  T0.U_SPEC2 AS 'SPEC 2',
  T3.PRICE,T3.PRICELIST

FROM OSCN T0

  JOIN OITM T1 ON T0.ITEMCODE = T1.ITEMCODE
  JOIN OCRD T2 ON T0.CARDCODE = T2.CARDCODE
  JOIN ITM1 T3 ON T0.ITEMCODE = T3.ITEMCODE

WHERE T0.CARDCODE = 'C003954' AND T3.PRICELIST = (SELECT MAX(PriceList) FROM ITM1 PL WHERE PL.ItemCode=T0.ItemCode)
